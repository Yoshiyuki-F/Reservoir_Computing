{
  "name": "windowed",
  "description": "Training configuration with preprocessing for windowed data",
  "preprocessing": {
    "scaler": "standard",
    "window": {
      "window_size": 48,
      "horizon": 1,
      "stride": 1,
      "target": "next"
    },
    "zero_center_target": true
  },
  "val_size": 0.1,
  "train_size": 0.75,
  "reg_param": 1e-6,
  "washout": 100,
  "shuffle_windows": true,
  "metrics": ["MSE", "NMSE", "MAE"],
  "rollout_steps": 50
}